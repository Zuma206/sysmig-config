#######################
## Program Variables ##
#######################

set {
  $autotiling ~/.config/sysmig/autotiling/autotiling/main.py
  $term foot
  $menu rofi -show drun
}

##############
## Keybinds ##
##############

bindsym {
  $mod+q exec $term
  $mod+r exec $menu
}

###############
## Autostart ##
###############

exec protonvpn-app
exec kanshi
exec_always kanshictl reload
exec_always python3 $autotiling
